@model InventoryApp.Models.Order

@{
    ViewBag.Title = "Cancel order";
}

<h2>Cancel order</h2>

<h3>Are you sure you want to cancel this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <div class="panel panel-warning">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2">
                    <div class="thumbnail">
                        <img src="@Url.Action("Image", "Items", new { id = Model.ItemId })" style="max-height: 200px" />
                    </div>
                </div>
                <div class="col-md-10">
                    <h4>@Html.DisplayFor(model => model.Item.Name)</h4>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>

                        <dt>
                            Total
                        </dt>

                        <dd>
                            @string.Format("{0:C0}", Model.Quantity * Model.Item.Price)
                            (@string.Format("{0:C0} each unit", Model.Item.Price))
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                    </dl>
                </div>
            </div>
            
        </div>
    </div>
</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancel this order" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", "Orders", null, new { @class = "btn btn-default" })
        </div>
    }


@section Scripts {
    <script>
        console.log('@Model.Date')
    </script>
}